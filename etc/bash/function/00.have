# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; -*-
#
#       Extensions allowing us to declare a requirement for a specific program
#       to be installed before performing specific initialisations.

function need {
    $must_be_interactive
    
    available $1 \
        || warn "${1} is not available"
}

function available {
    unset -v available
    type $1 &> /dev/null \
        && available='yes'
}
