#!/bin/sh
# github:benjaminhawkeslewis:bin/home-symlinks
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; -*-
#
#       Create home symlinks

cd $HOME
ln -si $HOME/Projects/home/etc
ln -si $HOME/Projects/home/share
ln -si $HOME/Projects/home/var
mkdir -p $HOME/bin
cd $HOME/bin
pwd
for f in `find $HOME/Projects/home/bin -type f` ; do ln -si $f ; done 
cd $HOME 
for f in `find $HOME/Projects/home -maxdepth 1 -type f -name '.bash*'` ; do ln -si $f ; done 
ln -si $HOME/etc/gitignore .gitignore
ln -siT $HOME/etc/vim .vim
ln -si $HOME/etc/vimrc .vimrc
