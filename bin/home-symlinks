#!/bin/sh
# github:benjaminhawkeslewis:bin/home-symlinks
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; -*-
#
#       Create home symlinks

cd $HOME
ln -s $HOME/Projects/home/etc
ln -s $HOME/Projects/home/share
ln -s $HOME/Projects/home/var
mkdir -p $HOME/bin
cd $HOME/bin
pwd
for f in `find $HOME/Projects/home/bin -type f` ; do ln -s $f ; done 
cd $HOME 
for f in `find $HOME/Projects/home -type f -name ".bash*" -depth 1` ; do ln -s $f ; done 
ln -s $HOME/etc/gitignore .gitignore
ln -s $HOME/etc/vim .vim
ln -s $HOME/etc/vim/vimrc .vimrc
